      "actions": [
        ["big_text", "Flower"],
        ["flower", "1f", "2f", "3f", "4f", "1g", "2g", "3g", "4g", "1a", "2a", "3a", "4a", "1y"],
        ["when", [[
          [{"name": "match", "opts": [["call_choice"], [[ "nojoker", [["1f","2f","3f","4f"], 1] ]]]}, {"name": "match", "opts": [["flowers"], [[ "unique", "nojoker", [["1f","2f","3f","4f"], 4] ]]]}],
