  "play_restrictions": [
    [["flower"], []]
  ],
  "before_turn_change": {
    "actions": [
      ["unset_status", "kan", "double_kan"],
      ["when", [{"name": "status_missing", "opts": ["match_start"]}], [["unset_status", "first_turn"]]]
    ]
  },
  "after_turn_change": {
    "actions": [
      ["when", ["no_tiles_remaining"], [["pause", 1000], ["ryuukyoku"]]],
      ["when", [{"name": "status_missing", "opts": ["match_start"]}, "not_no_tiles_remaining"], [["draw"]]],
      ["when", [{"name": "everyone_status", "opts": ["no_flowers"]}], [["unset_status_all", "no_flowers", "match_start"]]]
    ]
  },
  "after_call": {
    "actions": [
      // can't use e.g. shimocha_discarded or else flower calls will increment counter
      ["when", [{"name": "seat_is", "as": "shimocha", "opts": ["callee"]}], [["add_counter", "calls_from_shimocha", 1]]],
      ["when", [{"name": "seat_is", "as": "toimen", "opts": ["callee"]}], [["add_counter", "calls_from_toimen", 1]]],
      ["when", [{"name": "seat_is", "as": "kamicha", "opts": ["callee"]}], [["add_counter", "calls_from_kamicha", 1]]]
    ]
  },
  "before_win": {
    "actions": [
      ["flip_all_calls_faceup"],
      ["when", [{"name": "counter_at_least", "opts": ["calls_from_shimocha", 3]}], [["as", "shimocha", [["make_responsible_for", "prev_seat", "all"]]]]],
      ["when", [{"name": "counter_at_least", "opts": ["calls_from_toimen", 3]}], [["as", "toimen", [["make_responsible_for", "prev_seat", "all"]]]]],
      ["when", [{"name": "counter_at_least", "opts": ["calls_from_kamicha", 3]}], [["as", "kamicha", [["make_responsible_for", "prev_seat", "all"]]]]]
    ]
  },
  "before_scoring": {
    "actions": [
      ["add_counter", "baida_reuse", "count_matches", ["winning_hand"], [[[[{"tile": "any", "attrs": ["original"]}], 1]]]]
    ]
  },
  "after_start": {
    "actions": [
      ["set_status_all", "first_turn", "match_start"],
      ["run", "flip_baida"]
    ]
